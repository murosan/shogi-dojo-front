{
  "compilerOptions": {
    "outDir": "./dist/js",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "pretty": true,
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "target": "es5",
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
